@page
@model farm.Pages.Products.CreateProductModel
@{
    ViewData["Title"] = "Admin create product";
}

<div>
    <nav class="bg-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <img class="h-8 w-8" src="https://tailwindui.com/img/logos/workflow-mark-indigo-500.svg" alt="Workflow">
                    </div>
                    <div class="hidden md:block">
                        <div class="ml-10 flex items-baseline space-x-4">
                            <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
                            <a asp-area="" asp-page="/Dashboard" class="text-white px-3 py-2 rounded-md text-sm font-medium">Dashboard</a>

                            <a asp-area="" asp-page="/Products/GetAllProducts" class="bg-gray-900 text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Products</a>

                            <a asp-area="" asp-page="/Orders/GetAllOrders" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Orders</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <header class="bg-white shadow">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            <h1 class="text-3xl font-bold leading-tight text-gray-900">
                Products
            </h1>
        </div>
    </header>
    <main>
        <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <div class="px-4 py-6 sm:px-0">
                <div class="flex flex-col">
                    <a asp-page="GetAllProducts" class="bg-gray-800 text-center text-white w-48 p-3 mb-10 rounded hover:bg-gray-600 block">
                        <i class="uil uil-arrow-left"></i> Go back
                    </a>
                    <form action="">
                        <h2 class="text-xl font-bold leading-tight text-gray-900 mb-10">Create a new product</h2>

                        <div class="w-6/12">
                            <input type="text" name="name" placeholder="Name" class="bg-gray-100 rounded-t-lg border-b-2 border-indigo-600 w-auto outline-none p-3 block custom-input mb-10">

                            <input type="text" name="name" placeholder="Photo (URL)" class="bg-gray-100 rounded-t-lg border-b-2 border-indigo-600 w-auto outline-none p-3 block custom-input mb-10">

                            <textarea type="text" name="name" placeholder="Description" class="bg-gray-100 rounded-t-lg border-b-2 border-indigo-600 w-auto outline-none p-3 block custom-input mb-10"></textarea>

                            <input type="text" name="name" placeholder="Price (Without currency)" class="bg-gray-100 rounded-t-lg border-b-2 border-indigo-600 w-auto outline-none p-3 block custom-input mb-10">

                            <button type="submit" class="bg-green-500 text-white w-48 p-3 mb-10 rounded hover:bg-green-600">Create a product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>