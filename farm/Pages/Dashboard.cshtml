@page
@model farm.Pages.DashboardModel
@{
    ViewData["Title"] = "Admin dashboard";
}

<div>
    <nav class="bg-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <img class="h-8 w-8" src="https://tailwindui.com/img/logos/workflow-mark-indigo-500.svg" alt="Workflow">
                    </div>
                    <div class="hidden md:block">
                        <div class="ml-10 flex items-baseline space-x-4">
                            <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
                            <a asp-area="" asp-page="/Dashboard" class="bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium">Dashboard</a>

                            <a asp-area="" asp-page="/Products/GetAllProducts" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Products</a>

                            <a asp-area="" asp-page="/Orders/GetAllOrders" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Orders</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <header class="bg-white shadow">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            <h1 class="text-3xl font-bold leading-tight text-gray-900">
                Dashboard
            </h1>
        </div>
    </header>
    <main>
        <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <div class="px-4 py-6 sm:px-0">
                <div class="flex space-x-10">
                    <div class="w-96 h-48 shadow-xl p-10">
                        <span class="text-xl font-semibold uppercase text-indigo-500">Products</span>
                        <p class="text-4xl font-black pt-5">2x</p>
                    </div>
                    <div class="w-96 h-48 shadow-xl p-10">
                        <span class="text-xl font-semibold uppercase text-yellow-500">Orders</span>
                        <p class="text-4xl font-black pt-5">100x</p>
                    </div>
                    <div class="w-96 h-48 shadow-xl p-10">
                        <span class="text-xl font-semibold uppercase text-green-500">Cash</span>
                        <p class="text-4xl font-black pt-5">40,000 DKK</p>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>