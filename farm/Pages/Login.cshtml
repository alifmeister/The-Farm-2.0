@page
@model farm.Pages.LoginModel
@{
    ViewData["Title"] = "The Farm 2.0 | Login";
}

<div class="flex h-screen ml-10 mr-10">
    <div class="bg-white shadow-xl w-full md:w-96 rounded-sm m-auto">
        <h1 class="text-2xl font-bold p-5">Hi, login :)</h1>
        <form action="" class="p-5">
            <input type="email" name="email" placeholder="Your email" class="bg-gray-100 rounded-t-lg border-b-2 border-indigo-600 w-auto outline-none p-3 block custom-input mb-10">

            <input type="password" name="password" placeholder="Your password" class="bg-gray-100 rounded-t-lg border-b-2 border-indigo-600 w-auto outline-none p-3 block custom-input mb-10">

            <button type="submit" class="p-3 w-48 rounded bg-green-500 text-white block mx-auto">Log in</button>
            <a href="#" class="text-center block mt-10 text-gray-500 hover:text-yellow-500">Don't have account? Create one!</a>
        </form>
    </div>
</div>
